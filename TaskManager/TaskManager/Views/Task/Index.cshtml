@{
    ViewData["Title"] = "Index";
}
@using TaskManager.BLL.DTO

<meta charset="utf-8" />

@*<p>IsInRole "Admins" ?</p>@User.IsInRole("Admins")*@

<h2>Текущие задачи</h2>


<div class="content">
    <a class="task-new" href="~/Task/Create">Cоздать карточку</a>
    <div class="task-container">
        
    
        @foreach (TaskDTO b in Model)
        {
            <div class="task-list">
                <p>@b.Title</p>
                <p>@b.Priority</p>
                <p>@b.User.UserName</p>
                <p>@b.Descriprion</p>
            </div>
        }
       </div>
</div>


